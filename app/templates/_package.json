{
  "name": "<%= slugname %>",
  "version": "<%= props.version %>",
  "description": "<%= description %>",
  "homepage": "<%= props.homepage %>",
  "repository": "<%= props.repository %>",
  "bugs": "<%= props.repository %>/issues",
  "author": {
    "name": "<%= author_name %>",
    "email": "<%= props.author_email %>"<% if (props.author_url) { %>,
    "url": "<%= props.author_url %>"<% } %>
  },
  "keywords": [
    "gruntplugin"
  ],
  "main": "Gruntfile.js",
  "engines": {
    "node": "<%= props.node_version %>"
  },
  "repository": {
    "type": "git",
    "url": "<%= props.repository %>"
  },
  "licenses": [
    {
      "type": "<%= props.license %>"
    }
  ],
  "devDependencies": {
    "grunt-contrib-jshint": "~0.2.0",
    "grunt-contrib-nodeunit": "~0.1.2",
    "grunt-contrib-clean": "~0.4.0",
    "grunt": "<%= props.grunt_version %>"
  },
  "scripts": {
    "test": "grunt test"
  }
}
